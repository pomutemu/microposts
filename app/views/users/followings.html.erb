<div class="row">
  <aside class="col-md-4">
    <%= render 'user_info' %>
  </aside>

  <div class="col-md-8">
    <h3>Followings (<%= @following_users.size %>)</h3>

    <% if @following_users.any? %>
      <ol class="followings">
