<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>

    <div class="panel panel-default">
      <div class="panel-heading">
        Location
      </div>

      <div class="panel-body">
        <%= @user.location %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        Profile
      </div>

      <div class="panel-body">
        <%= @user.profile %>
      </div>
    </div>
  </aside>

  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
