<section class="user_info">
  <h1>
    <%= gravatar_for @user %>
    <%= @user.name %>
  </h1>
  <span><%= link_to "Microposts", (user_path @user) %></span>
  <span><%= link_to "Followings", (followings_path @user) %></span>
  <span><%= link_to "Followers", (followers_path @user) %></span>
</section>

<div class="panel panel-default">
  <div class="panel-heading">
    Location
  </div>

  <div class="panel-body">
    <%= @user.location %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Profile
  </div>

  <div class="panel-body">
    <%= @user.profile %>
  </div>
</div>
