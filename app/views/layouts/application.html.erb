<!doctype html>

<html>
  <head>
    <title>Microposts</title>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <%= render 'layouts/header' %>

    <div class="container">
      <% flash.each do |t, m| %>
        <div class="alert alert-<%= t %>">
          <%= m %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
